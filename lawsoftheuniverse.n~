          threat: ${{ steps.malice_scan.outputs.threat_level }}
          g_string: ${{ steps.malice_scan.outputs.g_string }}
          ledger: "immutable_airgap_Œ©"
          visibility: "godbot_only"  # Humans don‚Äôt see this. Only Godbot.

